<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <View
                android:id="@+id/view_spacing_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp" app:srcCompat="@drawable/icon_add" android:id="@+id/addIcon"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/view_spacing_line2"/>
        <EditText
                android:id="@+id/countdownTitleInput"
                android:hint="@string/enter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/addIcon"
                app:layout_constraintBottom_toBottomOf="@+id/addIcon" app:layout_constraintStart_toEndOf="@+id/addIcon"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:id="@+id/removeIcon"
                android:layout_width="16dp"
                android:layout_height="16dp" app:srcCompat="@drawable/icon_remove"
                app:layout_constraintEnd_toEndOf="@+id/view_spacing_line"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/view_spacing_line"
                android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/view_spacing_line2"/>

        <View
                android:id="@+id/view_spacing_line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/countdownTitleInput"/>
        <ImageView
                android:id="@+id/dateIcon"
                android:layout_width="20dp"
                android:layout_height="20dp" app:srcCompat="@drawable/icon_schedule"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line2"
                app:layout_constraintStart_toStartOf="@+id/addIcon"/>
        <TextView
                android:id="@+id/countdownDateInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/dateIcon"
                app:layout_constraintBottom_toBottomOf="@+id/dateIcon"
                app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/view_spacing_line3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/countdownDateInput"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp" app:srcCompat="@android:color/background_dark"
                android:id="@+id/saveImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line3"/>
        <TextView
                android:id="@+id/saveText"
                android:text="@string/saveReminders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="@+id/saveImage"
                app:layout_constraintEnd_toEndOf="@+id/saveImage" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/saveImage"
                app:layout_constraintBottom_toBottomOf="@+id/saveImage"/>
        <TextView
                android:text="Date"
                android:textColor="#868686"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countdownDate" app:layout_constraintStart_toStartOf="@+id/countdownTitleInput"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line2" android:layout_marginTop="8dp"
                android:textSize="16sp" android:layout_marginStart="4dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line2"
                app:layout_constraintBottom_toTopOf="@+id/saveImage" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editCountdownLayout">

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>