<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="reminders" type="com.sandra.calendearlife.data.Reminders"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:id="@+id/view_spacing_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <View
                android:id="@+id/view_spacing_line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/remindersChecked"
                android:layout_marginTop="16dp"/>
        <Button
                android:text=""
                android:background="@drawable/round_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/remindersChecked"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@{reminders.title}"
                tools:text="Please remind me"
                android:fontFamily="@font/noto_sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remindersTitle"
                app:layout_constraintStart_toEndOf="@+id/remindersChecked" android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@{reminders.remindDate}"
                tools:text="20202020"
                android:fontFamily="@font/noto_sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remindersTime"
                app:layout_constraintTop_toBottomOf="@+id/remindersTitle" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/remindersTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>