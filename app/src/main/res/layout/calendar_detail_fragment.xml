<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="viewModel" type="com.sandra.calendearlife.calendar.detail.CalendarDetailViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <EditText
                android:id="@+id/detailTitleInput"
                android:text="@{viewModel.selectedItem.title}"
                android:hint="@string/enter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:id="@+id/removeIcon"
                android:layout_width="16dp"
                android:layout_height="16dp" app:srcCompat="@drawable/icon_remove"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/view_spacing_line2"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

        <View
                android:id="@+id/view_spacing_line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/detailTitleInput"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/allDayLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/view_spacing_line2"
                app:layout_constraintHorizontal_bias="0.0">

            <Switch
                    android:id="@+id/allDaySwitch"
                    android:checked="@{viewModel.selectedItem.isAllDay}"
                    android:text="All-day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/timeIcon"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/timeIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/timeIcon"/>
            <TextView
                    android:text="@{viewModel.selectedItem.endDate}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    android:id="@+id/endDate"
                    app:layout_constraintStart_toStartOf="@+id/beginDate" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/beginDate"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    android:id="@+id/endTime"
                    app:layout_constraintEnd_toEndOf="@+id/beginTime"
                    app:layout_constraintTop_toTopOf="@+id/endDate"
                    app:layout_constraintBottom_toBottomOf="@+id/endDate"/>
            <TextView
                    android:text="@{viewModel.selectedItem.beginDate}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    android:id="@+id/beginDate"
                    app:layout_constraintStart_toStartOf="@+id/timeIcon" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/timeIcon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    android:id="@+id/beginTime"
                    app:layout_constraintEnd_toEndOf="@+id/allDaySwitch"
                    app:layout_constraintTop_toTopOf="@+id/beginDate"
                    app:layout_constraintBottom_toBottomOf="@+id/beginDate"/>
            <ImageView
                    android:id="@+id/timeIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@drawable/icon_time_pick"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
                android:id="@+id/view_spacing_line7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/allDayLayout"
                android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView

                android:id="@+id/locationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/icon_location"
                app:layout_constraintStart_toStartOf="@+id/detailTitleInput"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line7" android:layout_marginTop="8dp"/>
        <EditText
                android:id="@+id/locationInput"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add location"
                android:text="@{viewModel.selectedItem.location}"
                android:fontFamily="@font/noto_sans"
                android:textColor="#868686"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/locationIcon"
                app:layout_constraintBottom_toBottomOf="@+id/locationIcon"
                app:layout_constraintStart_toEndOf="@+id/locationIcon" android:layout_marginStart="16dp"/>

        <View
                android:id="@+id/view_spacing_line3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/locationInput"
                android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:id="@+id/friendsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/icon_friends"
                app:layout_constraintStart_toStartOf="@+id/locationIcon"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line3" android:layout_marginTop="8dp"/>
        <EditText
                android:id="@+id/noteInput"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/add_note"
                android:text="@{viewModel.selectedItem.note}"
                android:fontFamily="@font/noto_sans"
                android:textColor="#868686"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/noteIcon"
                app:layout_constraintBottom_toBottomOf="@+id/noteIcon"
                app:layout_constraintStart_toEndOf="@+id/noteIcon" android:layout_marginStart="16dp"/>
        <ImageView
                android:id="@+id/noteIcon"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/icon_note"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line5"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/friendsIcon"
        />
        <View
                android:id="@+id/view_spacing_line5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/friendsInput"
                android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:id="@+id/friendsInput"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add guests"
                android:fontFamily="@font/noto_sans"
                android:textColor="#868686"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/friendsIcon"
                app:layout_constraintBottom_toBottomOf="@+id/friendsIcon"
                app:layout_constraintStart_toEndOf="@+id/friendsIcon" android:layout_marginStart="16dp"/>
        <ImageView
                android:id="@+id/remindersIcon"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/icon_set_remind"
                app:layout_constraintStart_toStartOf="@+id/noteIcon"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line6" android:layout_marginTop="8dp"/>

        <Switch
                android:id="@+id/switchSetAsReminder"
                android:text="Set as Reminder event"
                android:checked="@{viewModel.selectedItem.hasReminders}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textColor="#868686"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/remindersIcon"
                app:layout_constraintBottom_toBottomOf="@+id/remindersIcon"
                app:layout_constraintStart_toEndOf="@+id/remindersIcon" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/setRemindLayout"
                tools:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/switchSetAsReminder"
                app:layout_constraintTop_toBottomOf="@+id/switchSetAsReminder" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp">

            <ImageView
                    android:id="@+id/bellIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@drawable/icon_bell"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>
            <TextView
                    android:id="@+id/remindersDateInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.selectedItem.beginDate}"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/bellIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/bellIcon" app:layout_constraintVertical_bias="1.0"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/remindersTimeInput"/>
            <TextView
                    android:id="@+id/remindersTimeInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/remindersDateInput"
                    app:layout_constraintBottom_toBottomOf="@+id/remindersDateInput"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"/>
            <ImageView
                    android:id="@+id/repeatIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp" app:srcCompat="@drawable/icon_repeat"
                    app:layout_constraintStart_toStartOf="@+id/bellIcon"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/bellIcon"/>
            <TextView
                    android:id="@+id/repeatChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.selectedItem.frequency}"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/repeatIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/repeatIcon" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
                android:id="@+id/view_spacing_line4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/setRemindLayout"
                android:layout_marginTop="4dp"/>
        <View
                android:id="@+id/view_spacing_line6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/noteInput"/>
        <ImageView
                android:id="@+id/countdownIcon"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/icon_countdown"
                app:layout_constraintStart_toStartOf="@+id/friendsIcon"
                app:layout_constraintTop_toBottomOf="@+id/view_spacing_line4" android:layout_marginTop="8dp"/>

        <Button
                android:id="@+id/saveButton"
                android:text="@string/saveReminders"
                android:background="@drawable/grayborder"
                android:fontFamily="@font/noto_sans"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/deleteButton"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/countdownIcon"/>
        <Button
                android:text="Delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/black"
                android:id="@+id/deleteButton" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/saveButton" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="@+id/saveButton"
                app:layout_constraintBottom_toBottomOf="@+id/saveButton"/>

        <TextView
                android:text="@string/saveReminders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:id="@+id/saveText" app:layout_constraintEnd_toEndOf="@+id/saveImage2"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/saveImage2"
                app:layout_constraintBottom_toBottomOf="@+id/saveImage2" app:layout_constraintVertical_bias="0.666"/>
        <Switch
                android:id="@+id/switchSetAsCountdown"
                android:text="Set as Countdown event"
                android:checked="@{viewModel.selectedItem.hasCountdown}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textColor="#868686"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/countdownIcon"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/countdownIcon"
                app:layout_constraintBottom_toBottomOf="@+id/countdownIcon" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>