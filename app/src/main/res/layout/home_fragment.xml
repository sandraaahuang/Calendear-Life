<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.sandra.calendearlife.home.HomeViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout2"
                android:layout_width="0dp" android:layout_height="300dp"
                android:background="@drawable/background_stone">


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/countdownRecyclerView"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_countdown"
                    app:listCountdown="@{viewModel.liveCountdown}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent" android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
            </androidx.recyclerview.widget.RecyclerView>


            <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:spi_dotSelectedColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/countdownRecyclerView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/remindersRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:listitem="@layout/item_reminders"
                app:listReminder="@{viewModel.liveReminders}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <com.github.clans.fab.FloatingActionMenu
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_colorNormal="@color/black"
                app:menu_colorPressed="@color/black"
                app:menu_colorRipple="@color/black"
                app:menu_labels_colorRipple="@color/white"
                app:menu_labels_colorNormal="@color/white"
                app:menu_labels_textColor="@color/black"
                android:layout_marginBottom="16dp"
                app:fab_showShadow="true"
                app:fab_shadowColor="#66000000"
                app:fab_shadowRadius="@dimen/card_raduis"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/remindersRecyclerView" android:layout_marginEnd="16dp">

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/remindersFab"
                    app:fab_label="New Reminder"
                    app:fab_colorNormal="@color/black"
                    app:fab_colorPressed="@color/black"
                    app:fab_colorRipple="@color/white"
                    android:src="@drawable/icon_add_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="#66000000"/>

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/countdownsFab"
                    app:fab_label="New Countdown"
                    app:fab_colorNormal="@color/black"
                    app:fab_colorPressed="@color/black"
                    app:fab_colorRipple="@color/white"
                    android:src="@drawable/icon_add_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="#66000000"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/calendarFab"
                app:fab_label="New Event"
                app:fab_colorNormal="@color/black"
                app:fab_colorPressed="@color/black"
                app:fab_colorRipple="@color/white"
                android:src="@drawable/icon_add_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_showShadow="true"
                app:fab_shadowColor="#66000000"/>

        </com.github.clans.fab.FloatingActionMenu>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>