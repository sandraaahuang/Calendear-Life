<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="calendar" type="com.sandra.calendearlife.data.Calendar"/>
        <import type="android.graphics.Color"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="?attr/selectableItemBackground">

        <ImageView
                android:layout_width="60dp"
                android:layout_height="10dp"
                android:background='@{Color.parseColor("#" + calendar.color)}'
                android:id="@+id/itemEventColor"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@+id/itemEventText"
                app:layout_constraintBottom_toBottomOf="@+id/itemEventText"/>

        <TextView
                android:id="@+id/itemEventText"
                android:layout_width="215dp"
                android:layout_height="26dp"
                android:textSize="16sp"
                android:text="@{calendar.title}"
                tools:text="Play football with friends"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/itemEventColor"
                android:layout_marginStart="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>