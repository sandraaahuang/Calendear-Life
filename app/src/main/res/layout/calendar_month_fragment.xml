<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.sandra.calendearlife.calendar.month.CustomMonthCalendar
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/customMonthCalendar">

        </com.sandra.calendearlife.calendar.month.CustomMonthCalendar>


        <com.github.clans.fab.FloatingActionMenu
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_colorNormal="@color/black"
                app:menu_colorPressed="@color/black"
                app:menu_colorRipple="@color/black"
                app:menu_labels_colorRipple="@color/white"
                app:menu_labels_colorNormal="@color/white"
                app:menu_labels_textColor="@color/black"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent">

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/remindersFab"
                    app:fab_label="Add Reminder"
                    app:fab_colorNormal="@color/black"
                    android:src="@drawable/icon_add_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/countdownsFab"
                    app:fab_label="Add Countdown"
                    app:fab_colorNormal="@color/black"
                    android:src="@drawable/icon_add_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/calendarFab"
                    app:fab_label="Add Calendar"
                    app:fab_colorNormal="@color/black"
                    android:src="@drawable/icon_add_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </com.github.clans.fab.FloatingActionMenu>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>