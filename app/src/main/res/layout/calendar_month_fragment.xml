<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.sandra.calendearlife.calendar.month.CalenderMonthViewModel"/>
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/stoneTint"
            android:clickable="true"
            android:focusable="true">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.kizitonwose.calendarview.CalendarView
                        android:layout_marginTop="8dp"
                        android:id="@+id/calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cv_dayViewResource="@layout/calendar_month_day"
                        app:cv_monthHeaderResource="@layout/calendar_month_header"
                        app:cv_orientation="horizontal"
                        app:cv_scrollMode="paged"/>

                <TextView
                        android:id="@+id/selectedDateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="?attr/monthBackground"
                        android:fontFamily="@font/noto_sans"
                        android:paddingStart="20dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="12dp"
                        android:textAllCaps="true"
                        android:textColor="?attr/totalB2W"
                        android:textSize="14sp"
                        tools:text="7 Jan, 2019"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        listEvent="@{viewModel.liveCalendar}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:nestedScrollingEnabled="false"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.github.clans.fab.FloatingActionMenu
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_colorNormal="@color/black"
                app:menu_colorPressed="@color/black"
                app:menu_colorRipple="@color/black"
                app:menu_labels_colorRipple="@color/translucent_80"
                app:menu_labels_colorNormal="@color/translucent_80"
                app:menu_labels_textColor="?attr/totalB2W"
                app:menu_labels_showShadow="false"
                android:layout_marginBottom="16dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="20dp"
                app:fab_showShadow="true"
                app:fab_shadowColor="#66000000"
                app:fab_shadowRadius="@dimen/card_raduis"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/remindersRecyclerView" android:layout_marginEnd="16dp">


        <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/remindersFab"
                    app:fab_label="@string/new_reminder"
                    app:fab_colorNormal="@color/black"
                    app:fab_colorPressed="@color/black"
                    app:fab_colorRipple="?attr/backgroundcolor"
                    android:src="@drawable/icon_add_reminder_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="#66000000"/>

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/countdownsFab"
                    app:fab_label="@string/new_countdown"
                    app:fab_colorNormal="@color/black"
                    app:fab_colorPressed="@color/black"
                    app:fab_colorRipple="?attr/backgroundcolor"
                    android:src="@drawable/icon_add_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="#66000000"/>

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/calendarFab"
                    app:fab_label="@string/new_event"
                    app:fab_colorNormal="@color/black"
                    app:fab_colorPressed="@color/black"
                    app:fab_colorRipple="?attr/backgroundcolor"
                    android:src="@drawable/icon_add_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_showShadow="true"
                    app:fab_shadowColor="#66000000"/>

        </com.github.clans.fab.FloatingActionMenu>

    </FrameLayout>
</layout>