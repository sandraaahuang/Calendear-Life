<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/deep_gray</item>
        <item name="background_color">@color/dark_white</item>
        <item name="card_background_color">@color/translucent_white</item>
        <item name="normal_text_color">#868686</item>
        <item name="toolbar_color">@color/gray</item>
        <item name="separate_line_color">@android:color/darker_gray</item>
        <item name="dot_color">@color/black</item>
        <item name="button_color">@color/black</item>
        <item name="drawable_tint_color">@color/black</item>
        <item name="stone_tint_color">@color/translucent_80</item>
        <item name="save_button_color">@color/black</item>
        <item name="toolbar_text_color">@color/deep_gray</item>
        <item name="month_background">#EEEEEE</item>
        <item name="total_white2black">@color/white</item>
        <item name="total_black2white">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="home_card_color">#fdf5e6</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="countdown_background_color">#0E2E33</item>

    </style>

    <!-- dark theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/deep_gray</item>
        <item name="background_color">@color/deep_gray</item>
        <item name="card_background_color">@color/translucent_dark</item>
        <item name="normal_text_color">@color/dark_white</item>
        <item name="toolbar_color">@color/black</item>
        <item name="separate_line_color">@color/dark_white</item>
        <item name="dot_color">@color/dark_white</item>
        <item name="button_color">@color/dark_white</item>
        <item name="drawable_tint_color">@color/dark_white</item>
        <item name="stone_tint_color">@color/translucent_dark</item>
        <item name="save_button_color">#299999</item>
        <item name="toolbar_text_color">@color/dark_white</item>
        <item name="month_background">@color/black</item>
        <item name="total_white2black">@color/black</item>
        <item name="total_black2white">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="home_card_color">@color/black</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="countdown_background_color">#DFA480</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/total_black2white</item>
    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">?attr/normal_text_color</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">?attr/total_black2white</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">?attr/toolbar_text_color</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">?attr/toolbar_text_color</item>
    </style>

    <style name="MessageDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <!-- Custom month view -->
    <style name="HorizontalBreakLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>
    
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        
        
    </style>

</resources>
