<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/deep_gray</item>
        <item name="backgroundcolor">@color/dark_white</item>
        <item name="cardbackground">@color/translucent_white</item>
        <item name="textcolor">#868686</item>
        <item name="toolbarcolor">@color/gray</item>
        <item name="linecolor">@android:color/darker_gray</item>
        <item name="dotcolor">@color/black</item>
        <item name="buttoncolor">@color/black</item>
        <item name="drawableTint">@color/black</item>
        <item name="stoneTint">@color/translucent_80</item>
        <item name="saveColor">@color/black</item>
        <item name="toolbarText">@color/deep_gray</item>
        <item name="monthBackground">#EEEEEE</item>
        <item name="redText">@color/delete_red</item>
        <item name="totalWhite2Black">@color/white</item>
        <item name="totalB2W">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>

    </style>

    <!-- dark theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/deep_gray</item>
        <item name="backgroundcolor">@color/deep_gray</item>
        <item name="cardbackground">@color/translucent_dark</item>
        <item name="textcolor">@color/dark_white</item>
        <item name="toolbarcolor">@color/black</item>
        <item name="linecolor">@color/dark_white</item>
        <item name="dotcolor">@color/dark_white</item>
        <item name="buttoncolor">@color/dark_white</item>
        <item name="drawableTint">@color/dark_white</item>
        <item name="stoneTint">@color/translucent_dark</item>
        <item name="saveColor">#299999</item>
        <item name="toolbarText">@color/dark_white</item>
        <item name="monthBackground">@color/black</item>
        <item name="redText">#D6BF55</item>
        <item name="totalWhite2Black">@color/black</item>
        <item name="totalB2W">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/totalB2W</item>
    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">?attr/textcolor</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">?attr/totalB2W</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">?attr/toolbarText</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">?attr/toolbarText</item>
    </style>

    <style name="MessageDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <!-- Custom month view -->
    <style name="HorizontalBreakLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>
